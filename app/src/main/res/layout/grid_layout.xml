<?xml version="1.0" encoding="utf-8"?>
<com.example.bolek.minesweeper_android.HScroll xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.bolek.minesweeper_android.VScroll
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:clickable="true"
        android:columnWidth="@dimen/field_width"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="0dp" />

</com.example.bolek.minesweeper_android.HScroll>
