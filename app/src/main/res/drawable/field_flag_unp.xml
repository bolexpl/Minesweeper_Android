<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <size
                android:width="@dimen/field_width"
                android:height="@dimen/field_height" />

            <gradient
                android:angle="315"
                android:endColor="#2b2b2b"
                android:startColor="#151515"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#747474" />

        </shape>
    </item>

    <item android:drawable="@drawable/flag" />

</layer-list>