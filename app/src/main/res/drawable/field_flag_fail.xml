<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape android:shape="rectangle">

                    <size
                        android:width="@dimen/field_width"
                        android:height="@dimen/field_height" />

                    <gradient
                        android:angle="315"
                        android:endColor="#9c0000"
                        android:startColor="#a90404"
                        android:type="linear" />

                    <stroke
                        android:width="1dp"
                        android:color="#747474" />

                </shape>
            </item>

            <item android:drawable="@drawable/flag" />

        </layer-list>
    </item>
    <item android:state_pressed="true" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item>
                <shape android:shape="rectangle">

                    <size
                        android:width="@dimen/field_width"
                        android:height="@dimen/field_height" />

                    <gradient
                        android:angle="315"
                        android:endColor="#fd0000"
                        android:startColor="#ff2323"
                        android:type="linear" />

                    <stroke
                        android:width="1dp"
                        android:color="#747474" />

                </shape>
            </item>

            <item android:drawable="@drawable/flag" />

        </layer-list>
    </item>

</selector>